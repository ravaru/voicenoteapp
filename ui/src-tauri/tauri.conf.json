{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoiceNote",
  "version": "0.1.0",
  "identifier": "com.plaud.stt.obsidian",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "capabilities": ["default"],
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$APPDATA/voicenote/**", "$RESOURCE/**"]
      }
    },
    "windows": [
      {
        "title": "VoiceNote",
        "width": 1000,
        "height": 720,
        "resizable": true,
        "dragDropEnabled": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../third_party/ffmpeg/**/*",
      "../../third_party/whisper/**/*"
    ],
    "icon": ["icons/icon.icns", "icons/icon.ico", "icons/icon.png"]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": null
  }
}
